name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.12'

    - name: Install uv
      run: curl -LsSf https://astral.sh/uv/install.sh | sh

    - name: Configure uv for local caching
      run: source .env.uv

    - name: Cache uv dependencies
      uses: actions/cache@v4
      with:
        path: .uv/cache
        key: ${{ runner.os }}-uv-${{ hashFiles('uv.lock') }}
        restore-keys: |
          ${{ runner.os }}-uv-

    - name: Install dependencies
      run: uv sync

    - name: Run linter
      run: uv run ruff check src tests --select=E9,F63,F7,F82

    - name: Run tests
      run: uv run pytest

    - name: Upload coverage
      uses: codecov/codecov-action@v4
      if: success()
      with:
        files: ./coverage.xml
